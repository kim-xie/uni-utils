{
  "name": "kim-uni-utils",
  "version": "1.1.9",
  "private": false,
  "description": "universal utils",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "browser": "dist/index.browser.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "setup": "rimraf -rf node_modules && npm install --no-package-lock",
    "start": "rollup -c rollup.config.js -w",
    "build": "rimraf -fr dist && rollup -c rollup.config.js && npm run changelog && gulp buildApi && npm run build:docs",
    "test": "jest --coverage --verbose -u",
    "lint": "eslint --ext .ts --format=pretty src/**",
    "lint:fix": "eslint --fix --ext .ts --format=pretty src/**",
    "changelog": "gulp changelog",
    "prettier": "prettier -c --write src/**",
    "commitlint": "commitlint --config commitlint.config.js -e -V",
    "build:docs": "api-documenter markdown -i ./temp -o ./docs/api",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "startTypeDoc": "gulp buildTypeDoc",
    "preCommit": "lint-staged",
    "release": "npm publish"
  },
  "keywords": [
    "uni",
    "utils",
    "typescript"
  ],
  "author": "kim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mr-kings/uni-utils.git"
  },
  "homepage": "https://github.com/mr-kings/uni-utils#readme",
  "bugs": {
    "url": "https://github.com/mr-kings/uni-utils/issues"
  },
  "lint-staged": {
    "src/*.{ts,js}": [
      "npm run prettier",
      "npm run lint:fix"
    ]
  },
  "files": [
    "dist",
    "types",
    "LICENSE",
    "CHANGELOG.md",
    "README.md",
    "package.json"
  ],
  "sideEffects": "false",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.4",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "@microsoft/api-documenter": "^7.13.44",
    "@microsoft/api-extractor": "^7.18.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@types/conventional-changelog": "^3.1.1",
    "@types/fs-extra": "^9.0.12",
    "@types/gulp": "^4.0.9",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "browser-sync": "^2.27.5",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-formatter-pretty": "^4.1.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "gulp": "^4.0.2",
    "gulp-typedoc": "^3.0.1",
    "husky": "^7.0.0",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "2.3.2",
    "prettier-eslint": "^13.0.0",
    "pretty": "^2.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.56.3",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.9",
    "typescript": "^4.4.2",
    "vuepress": "^1.8.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
